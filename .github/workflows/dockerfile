
name: Docker Build and Tag

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Build and Tag Docker Image
        run: docker build -t cognosis:latest .

      - name: Create User
        run: useradd -m -s /bin/bash myuser

      - name: Docker Login
        run: docker login -u <username> -p <password>
        # Include this step only if Docker login is required

      - name: Push Docker Image
        run: docker push cognosis:latest
      - name: Build and Tag Docker Image
        run: docker build -t cognosis:latest .

      - name: Docker Login
        run: docker login -u <username> -p <password>
        # Include this step only if Docker login is required

      - name: Push Docker Image

      - name: Healthcheck
        run: docker inspect --format='{{json .State.Health.Status}}' cognosis
        # Include this step only if Docker login is required

      - name: Push Docker Image

